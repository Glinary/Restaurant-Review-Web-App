  <!--END OF PROFILE SECTION (including top revs)-->
  
  <div class="dividerSec">

    <div class="reviews-section">
      <div class="label-and-navigator" id="review">
        <h3>User's Reviews</h3>
        <h4>View All</h4>
      </div>

      <!-- User Review Box -->
      {{#each reviews}}
      <div class="reviews-content-container">
        <div class="reviews-left-container">
          
          <div class="left">
            <div class="reviews-user-details">
              <img
                src="assets/anonymous_picture.png"
                class="reviews-profile-pic"
              />
            </div>

            <!-- User Review Information-->
            <div class="further-details">
              <div class="name">
                <a class="firstname" href="viewprofileU3.html">{{this.userName}}</a>
              </div>
              <div class="others">
                <p class="review-count">9 Reviews</p>
              </div>
            </div>

            <!-- User Review Helpfulness -->
            <div id="reaction">
              <div id="helpful">
                <i class="fa-solid fa-thumbs-up" style="color: #000000"></i>
              </div><span class="count" value="17">17</span>
              <div id="unhelpful">
                <i class="fa-solid fa-thumbs-down" style="color: #000000;"></i></i>
              </div><span class="count" value="2">2</span>
            </div>
          </div>

          <!-- User Review Rating/Stars -->
          <div class="overall-stars">
            <div id="Ostar"><i class="fa-solid fa-star" style="color: #d1ba29;"></i></div>
            <div id="Ostar"><i class="fa-solid fa-star" style="color: #d1ba29;"></i></div>
            <div id="Ostar"><i class="fa-solid fa-star" style="color: #d1ba29;"></i></div>
            <div id="Ostar"><i class="fa-regular fa-star"></i></div>
            <div id="Ostar"><i class="fa-regular fa-star"></i></div>
          </div>

          <!-- User Review -->
          <div class="review">
            <p>
              {{this.reviewDesc}}
            </p>
          </div>
          <div class="review-edit">
            <form action="#" method="post">
              <div class="review-edit-form">
                <textarea
                  name="edit-rev-box"
                  id="edit-rev-box"
                  rows="4"
                  maxlength="350"></textarea>
                
                  <input type="submit" value="Submit" />
                <input type="submit" value="Cancel" />
              </div>
            </form>
          </div>
        </div>

        <!-- User Review Images (right) -->
        <div class="reviews-pictures">
          <img src="assets/DT3.jpg" class="review-image" />
          <img src="assets/DT4.jpg" class="review-image" />
      </div>

        <!-- User Review Option Bar -->
        <div id="EditMenu">
          <div id="editBar">
            <div id="editBars"></div>
            <div id="editBars"></div>
            <div id="editBars"></div>
          </div>
          <div id="EditNav">
            <ul>
              <li>Reply</li>
              <li>Edit</li>
              <li>Delete</li>
            </ul>
          </div>
        </div>
      </div>
      

        <!-- User Review Replying/ Commenting Box-->
        <div class="review-reply">
          <form action="#" method="post">
            <div class="review-reply-form">
              <textarea
                name="reply-rev-box"
                id="reply-rev-box"
                rows="4"
                maxlength="180"
                placeholder="Write comment here"></textarea>
              
                <input type="submit" value="Comment" />
              <input type="submit" value="Cancel" />
            </div>
          </form>
        </div>

        <!-- User Review Replies/ Comments List Box -->
        <div class="reply">
          <h4>Review Comments</h4>
          <div class="reply-container">
            <div id="single-reply-container">
              <p id="user-commentName">Angry Dobo</p>
              <p id="user-comm">Thank you! We will make sure we will keep up our recipes' tastiness.</p>
            </div>
            <div id="single-reply-container">
              <p id="user-commentName">Angry Dobo</p>
              <p id="user-comm">Thank you! We will make sure we will keep up our recipes' tastiness.</p>
            </div>
            <div id="expand-reviews">See More
              <i class="fa-solid fa-chevron-down" style="color: #000000;"></i>
            </div>
          </div>
        </div>
      {{/each}}
      </div>
  </div>  