            <img src="assets/DT2.jpg" class="gallery-image"/>
            <img src="assets/DT4.jpg" class="gallery-image"/>
            <img src="assets/DT1.jpg" class="gallery-image"/>
            <img src="assets/DT3.jpg" class="gallery-image"/>
