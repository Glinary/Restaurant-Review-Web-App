<!-- START OF REVIEW SECTION -->
    <div class="reviews-section">
      
      <div class="label-and-navigator" id="review">
        <h3>User's Reviews</h3>
        <h4>View All</h4>
      </div>
      
      {{#each reviews}}
      <div class="reviews-content-container">
      
        <div class="reviews-left-container">
          
          <div class="left">
            
            <div class="reviews-user-details">
              <img
                src="{{this.avatar}}"
                class="reviews-profile-pic"
              />
            </div>
            <div class="further-details">
              <div class="name">
                <a class="firstname" href="#">{{this.userName}}</a>
              </div>
              <div class="others">
                <p class="review-count"></p>
              </div>
            </div>
            <form id="reaction">
              <label class="reacBut">
              <input type="checkbox" id="reacBut"  onclick="sendFunc(event)" data-id={{this._id}}> 
                <span class="icon" id="helpful"><img src="assets/tbUP0.png" ></span>  
                <span class="count" value={{this.reactionInfo.likeCount}} data-toggle={{this.reactionInfo.likeToggle}}>1</span>
              </label>
            </form>
          </div>
          <div class="overall-stars">
            <div id="Ostar"><i class="fa-solid fa-star" style="color: #d1ba29;"></i></div>
            <div id="Ostar"><i class="fa-solid fa-star" style="color: #d1ba29;"></i></div>
            <div id="Ostar"><i class="fa-solid fa-star" style="color: #d1ba29;"></i></div>
            <div id="Ostar"><i class="fa fa-star"></i></div>
            <div id="Ostar"><i class="fa fa-star"></i></div>
          </div>
          <div id="titleBl">{{this.reviewTitle}}</div>
          <div class="review">
            <p>
              {{this.reviewDesc}}
            </p>
          </div>
          <div class="review-edit">
            <form action="#" method="post">
              <div class="review-edit-form">
                <textarea
                  name="edit-rev-box"
                  id="edit-rev-box"
                  rows="4"
                  maxlength="350"></textarea>
                
                  <input type="submit" value="Submit" />
                <input type="submit" value="Cancel" />
              </div>
            </form>
          </div>
        </div>

        <div class="reviews-pictures">
              {{#each this.images}}
                <img src="{{this}}" class="review-image" />
              {{/each}}
        </div>
        <div id="EditMenu">
          <div id="editBar">
            <div id="editBars"></div>
            <div id="editBars"></div>
            <div id="editBars"></div>
          </div>
          <div id="EditNav">
            <ul>
              <li><a href="#">Edit</a></li>
              <li><a href="#">Delete</a></li>
            </ul>
          </div>
        </div>
      </div>
      {{/each}}
      
